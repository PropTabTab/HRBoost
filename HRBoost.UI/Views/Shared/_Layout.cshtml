            <script>
                document.addEventListener("DOMContentLoaded", function () {
                    // Tüm nav-link sınıfına sahip bağlantıları seç
                    document.querySelectorAll(".nav-link").forEach(link => {
                        link.addEventListener("click", function (event) {
                            event.preventDefault(); // Varsayılan bağlantı davranışını engelle

                            let targetId = this.getAttribute("href").substring(1); // Bağlantının hedef ID'sini al
                            let baseURL = window.location.origin;

                            if (window.location.pathname === "/" || window.location.pathname.includes("index.html")) {
                                // Eğer zaten ana sayfadaysa, hedef bölüme yumuşak kaydırma yap
                                let targetSection = document.getElementById(targetId);
                                if (targetSection) {
                                    targetSection.scrollIntoView({ behavior: "smooth" });
                                } else {
                                    console.warn(targetId + " bölümü bulunamadı.");
                                }
                            } else {
                                // Eğer farklı bir sayfadaysa, ana sayfaya yönlendir ve ilgili bölüme git
                                window.location.href = baseURL + "/#" + targetId;
                            }
                        });
                    });
                });
            </script>

