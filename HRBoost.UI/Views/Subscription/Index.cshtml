@model List<HRBoost.Entity.Subscription>;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <div class="row">
        <section id="services" class="services section">

            <!-- Section Title -->
            <div class="container section-title" data-aos="fade-up">
                <h2>Subscription</h2>
                <p>Plan Subscription</p>
            </div><!-- End Section Title -->

            <div class="container">

                <div class="row gy-4">
                    @foreach (Subscription sub in @Model)
                    {
                        <div class="col-lg-3 col-md-6" data-aos="fade-up" data-aos-delay="100">
                            <div class="service-item position-relative">
                                <div class="icon">
                                    <i class="bi bi-bookmark"></i>
                                </div>
                                <a asp-action="Register" asp-controller="Login" asp-route-SubscriptionType="@sub.SubscriptionType" class="stretched-link">
                                    <h3>@sub.SubscriptionType</h3>
                                    @Decimal.Round(sub.Price,2)$
                                </a>
                            </div>
                        </div>
                    }

                    </div>

            </section>
        </div>
    </section>
