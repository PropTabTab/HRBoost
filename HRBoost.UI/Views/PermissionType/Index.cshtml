@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<PermissionType>

<div class="container mt-5">
    <h2 class="text-center mb-5">İzin Türleri Yönetimi</h2>

    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label for="permissionType" class="form-label">İzin Türü Seçin</label>
            <select class="form-select" id="permissionType" name="PermissionTypeId" required>
                <option value="" selected disabled>İzin Türü Seçin</option>
                @foreach (var permission in ViewBag.PermissionTypes)

                {
                    <option value="@permission.Id">@permission.Name</option>
                }
            </select>
        </div>
        <div class="d-flex justify-content-between mb-3">
            <a href="/PermissionType/Create" class="btn btn-primary">Yeni İzin Ekle</a>
            <button type="submit" class="btn btn-success">Kaydet</button>
        </div>
    </form>

    <h3 class="text-center mt-5">Kaydedilen İzinler</h3>
    <table class="table table-dark table-striped mt-3">
        <thead>
            <tr>
                <th>Adı</th>
                <th>Açıklama</th>
             
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var permission in Model)
            {
                <tr>
                    <td>@permission.Name</td>
                    <td>@permission.Description</td>
                    
                   
                    <td>
                        <form asp-action="Delete" method="post" asp-route-id="@permission.Id">
                            <button type="submit" class="btn btn-danger">Sil</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>