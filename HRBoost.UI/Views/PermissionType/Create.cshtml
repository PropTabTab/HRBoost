@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model HRBoost.Entity.PermissionType

<div class="container mt-5">
    <h2 class="text-center mb-4">Yeni İzin Türü Ekle</h2>

    <form method="post" action="/PermissionType/Create">
        <div class="form-group">
            <label asp-for="Name">İzin Türü</label>
            <input asp-for="Name" type="text" class="form-control" id="Name" name="Name" placeholder="İzin Türü Adını Girin" required />
        </div>
        <div class="form-group mt-3">
            <label asp-for="Description" for="Description">Açıklama</label>
            <textarea class="form-control" id="Description" name="Description" placeholder="Açıklama Girin"></textarea>
        </div>
        <div class="d-flex justify-content-between mt-4">
            <a href="/PermissionType/Index" class="btn btn-secondary">Geri Dön</a>
            <button type="submit" class="btn btn-success">Kaydet</button>
        </div>
    </form>
                           