@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model HRBoost.Entity.FileType

@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card" style="border-color: #ddd;">
                <div class="card-header" style="background-color: #555; color: #fff;">
                    <h5 class="card-title">Dosya Türü Güncelle</h5>
                </div>

                <div class="card-body">
                    <form method=post asp-action="Update" asp-area="Admin" asp-controller="FileType" role="form">
                        <input asp-for="Id" type="hidden" />

                        <div class="form-group mb-2">
                            <label asp-for="Name" class="control-label">Dosya Türü</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>


                        <div class="form-group mb-2">
                            <label asp-for="Description" class="control-label">Açıklama</label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>


                        <div class="text-center mt-3">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                            <a asp-action="Index" asp-controller="FileType" asp-area="Admin" class="btn btn-secondary">Geri</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>