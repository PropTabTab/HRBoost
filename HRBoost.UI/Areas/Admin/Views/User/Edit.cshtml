@model HRBoost.UI.Areas.Admin.Models.VM.UserViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kullanıcı Düzenleme</title>
    <style>
        body {
            background-color: black;
            color: white;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 600px;
            margin: 50px auto;
            padding: 20px;
            background-color: #333;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.3);
        }

        h1 {
            color: yellow;
            text-align: center;
            margin-bottom: 20px;
        }

        form {
            display: flex;
            flex-direction: column;
        }

        label {
            margin-bottom: 5px;
            font-weight: bold;
        }

        input, select, button {
            padding: 10px;
            margin-bottom: 15px;
            border: none;
            border-radius: 5px;
            font-size: 14px;
        }

        input, select {
            background-color: #222;
            color: white;
        }

        input:focus, select:focus {
            outline: none;
            box-shadow: 0 0 5px yellow;
        }

        button {
            background-color: yellow;
            color: black;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        button:hover {
            background-color: orange;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Kullanıcı Düzenleme</h1>
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div>
                <label asp-for="FirstName">Ad</label>
                <input asp-for="FirstName" />
            </div>

            <div>
                <label asp-for="LastName">Soyad</label>
                <input asp-for="LastName" />
            </div>

            <div>
                <label asp-for="Email">E-Posta</label>
                <input asp-for="Email" />
            </div>

            <div>
                <label asp-for="Status">Durum</label>
                <select asp-for="Status">
                    <option value="Active">Aktif</option>
                    <option value="DeActive">Pasif</option>
                    <option value="Pending">Beklemede</option>
                    <option value="Deleted">Silindi</option>
                </select>
            </div>

            <button type="submit">Kaydet</button>
        </form>
    </div>
</body>
</html>
