@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model HRBoost.UI.Areas.Admin.Models.VM.UserViewModel

<div class="settings-container">
    <style>
        body {
            background-color: #121212;
            color: #ffffff;
            font-family: Arial, sans-serif;
        }

        .settings-container {
            max-width: 600px;
            margin: 50px auto;
            background-color: #1e1e1e;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        h2 {
            text-align: center;
            color: #ffffff;
            margin-bottom: 20px;
            font-size: 24px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-label {
            display: block;
            font-weight: bold;
            color: #ffffff;
            margin-bottom: 5px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #555;
            border-radius: 5px;
            background-color: #2c2c2c;
            color: #ffffff;
        }

            .form-control:focus {
                outline: none;
                border-color: #007bff;
            }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            color: #ffffff;
            width: 100%;
            padding: 10px;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
            color: #ffffff;
            width: 100%;
            padding: 10px;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            margin-top: 15px;
        }

            .btn-danger:hover {
                background-color: #a71d2a;
            }

        .text-danger {
            font-size: 14px;
            color: #ff4d4d;
        }

        .deactivate-form {
            margin-top: 20px;
        }
    </style>

    <h2>Kullanıcı Ayarları</h2>
    <div class="container mt-5">
        <form asp-action="Settings" method="post">
            <div class="form-group">
                <label for="FirstName">Ad:</label>
                <input asp-for="FirstName" class="form-control" placeholder="Adınızı girin" />
            </div>
            <div class="form-group">
                <label for="LastName">Soyad:</label>
                <input asp-for="LastName" class="form-control" placeholder="Soyadınızı girin" />
            </div>
            <div class="form-group">
                <label for="Email">E-posta:</label>
                <input asp-for="Email" class="form-control" placeholder="E-postanızı girin" />
            </div>
            <div class="form-group">
                <label for="Password">Şifre:</label>
                <input asp-for="Password" class="form-control" placeholder="Şifrenizi girin" type="password" />
            </div>
            <div class="form-group">
                <label for="Status">Hesap Durumu:</label>
                <select asp-for="Status" class="form-control">
                    <option value="Active">Aktif</option>
                    <option value="DeActive">Pasif</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </form>


        <a asp-action="Deactivate" asp-controller="User" asp-route-id="@Model.Id" class="btn btn-danger mt-2">Hesabı Pasif Yap</a>
       
    </div>
