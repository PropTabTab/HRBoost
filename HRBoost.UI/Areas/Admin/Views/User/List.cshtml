@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@model IEnumerable<HRBoost.Entity.User>
<style>
  
    body {
        background-color: black; 
        color: white; 
    }

   
    table {
        background-color: #1a1a1a; 
        color: white; 
    }

    th, td {
        border: 1px solid white; 
        color: white;
    }

   
    .text-white {
        color: white !important;
    }
</style>

<div class="card mb-4">
    <div class="card-header bg-dark text-white">
        <i class="fas fa-table me-1"></i>
       Kullanıcı Listesi
    </div>
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Status</th>
                    <th>Email Confirmed</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Status</th>
                    <th>Email Confirmed</th>
                </tr>
            </tfoot>
            <tbody>
                @foreach (var user in Model)

                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>@user.Status</td>
                        <td>@user.EmailConfirmed</td>
                    </tr>
                }


            </tbody>
            
        </table>
    </div>
</div>

