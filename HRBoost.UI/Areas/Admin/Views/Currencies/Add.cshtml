@model HRBoost.Entity.Currency
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Add Currency";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card" style="border-color: #ddd;">
                <div class="card-header" style="background-color: #555; color: #fff;">
                    <h5 class="card-title">Para Birimi Ekle</h5>
                </div>

                <div class="card-body">
                    <form method=post>

                        <div class="form-group mb-2">
                            <label for="Code">Kod</label>
                            <input type="text" class="form-control" id="Code" name="Code" value="@Model?.Code" placeholder="Kod"/>
                            @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
                        </div>


                        <div class="form-group mb-2">
                            <label for="Name">Para Birimi Adı</label>
                            <input type="text" class="form-control" id="Name" name="Name" value="@Model?.Name" placeholder="Para Birimi Adı"/>
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>


                        <div class="form-group mb-2">
                            <label for="Symbol">Para Birimi Sembolü</label>
                            <input type="text" class="form-control" id="Symbol" name="Symbol" value="@Model?.Symbol" placeholder="Para Birimi Sembolü"/>
                            @Html.ValidationMessageFor(model => model.Symbol, "", new { @class = "text-danger" })
                        </div>

                        <div class="text-center mt-3">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                            <a asp-action="Index" asp-controller="Currencies" asp-area="Admin" class="btn btn-secondary">Geri</a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}