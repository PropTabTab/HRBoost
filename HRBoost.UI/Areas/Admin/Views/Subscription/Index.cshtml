@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Subscriptions";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Reject</h1>

@model List<HRBoost.Entity.Subscription>
<h2>Kullanıcı Listesi</h2>
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        DataTable Example
    </div>
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>Type</th>
                    <th>Price</th>
                    <th>Status</th>
                    <th></th>
                    <th></th>

                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Type</th>
                    <th>Price</th>
                    <th>Status</th>
                    <th></th>
                    <th></th>
                </tr>
            </tfoot>
            <tbody>
                @foreach (var sub in Model)
                {
                    <tr>
                        <td>@sub.SubscriptionType</td>
                        <td>@sub.Price</td>
                        <td>@sub.Status</td>
                        <th> <a asp-action="Reject" asp-controller="User" asp-area="Admin" asp-route-id="@sub.Id" class="btn btn-danger">Sil</a></th>
                        <th> <a asp-action="Reject" asp-controller="User" asp-area="Admin" asp-route-id="@sub.Id" class="btn btn-danger">Sil</a></th>
                    </tr>
                }


            </tbody>
            
        </table>
        <div class="row">
            <a asp-action="Add" asp-controller="Subscription" asp-area="Admin" class="btn btn-primary">Add</a>
        </div>
    </div>
</div>
