@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Subscriptions";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model List<HRBoost.Entity.Subscription>

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Abonelikler Listesi
    </div>
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>Abonelik Türü</th>
                    <th>Abonelik Ücreti</th>
                    <th>Abonelik Süresi (Ay)</th>
                    <th>Statü</th>
                    <th></th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Abonelik Türü</th>
                    <th>Abonelik Ücreti</th>
                    <th>Abonelik Süresi (Ay)</th>
                    <th>Statü</th>
                    <th></th>
                </tr>
            </tfoot>
            <tbody>
                @foreach (var sub in Model)
                {
                    <tr>
                        <td>@sub.SubscriptionType</td>
                        <td>@sub.Price</td>
                        <td>@sub.Duration</td>
                        <td>@sub.Status</td>
                        <th> <a asp-action="Delete" asp-controller="Subscription" asp-area="Admin" asp-route-id="@sub.Id" class="btn btn-danger">Sil</a>
                            <a asp-action="Update" asp-controller="Subscription" asp-area="Admin" asp-route-id="@sub.Id" class="btn btn-warning">Güncelle</a>
                        </th>
                    </tr>
                }


            </tbody>

        </table>
        <a asp-action="Add" asp-controller="Subscription" asp-area="Admin" class="btn btn-primary">Abonelik Türü Ekle</a>
        <a asp-action="Index" asp-controller="Admin" asp-area="Admin" class="btn btn-secondary">Geri</a>
    </div>
</div>
