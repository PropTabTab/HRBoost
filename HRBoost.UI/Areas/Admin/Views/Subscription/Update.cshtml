@model HRBoost.Entity.Subscription
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
	ViewData["Title"] = "Update";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card" style="border-color: #ddd;">
                <div class="card-header" style="background-color: #555; color: #fff;">
                    <h5 class="card-title">Abonelik Türü Ekle</h5>
                </div>

                <div class="card-body">
                    <form method=post asp-action="Add" asp-area="Admin" asp-controller="Subscription" role="form">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-2">
                            <label asp-for="SubscriptionType" class="col-sm-2 control-label">Abonelik Türü</label>
							<div class="col-sm-10">
								<input asp-for="SubscriptionType" class="form-control" placeholder="Abonelik Türü" type="text" />
							</div>
                        </div>

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-2">
                            <label asp-for="Price" class="col-sm-2 control-label">Abonelik Ücreti</label>
							<div class="col-sm-10">
								<input asp-for="Price" class="form-control" placeholder="Abonelik Ücreti" type="number" />
                        </div>

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-2">
                                <label asp-for="Duration" class="col-sm-2 control-label">Abonelik Süresi (Ay)</label>
								<div class="col-sm-10">
									<input asp-for="Duration" class="form-control" placeholder="Abonelik Süresi (Ay)" type="number" />
								</div>
                        </div>



                        <div class="text-center mt-3">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                            <a asp-action="Index" asp-area="Admin" asp-controller="Subscription" class="btn btn-secondary">Geri</a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>