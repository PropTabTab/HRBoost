@model HRBoost.Entity.Subscription
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
	ViewData["Title"] = "Update";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<form method=post asp-action="Update" asp-area="Admin" asp-controller="Subscription" role="form">
	<div class="panel panel-default">
		<div class="panel-heading"><h6 class="panel-title"><i class="icon-menu"></i> Abonelik Düzenle</h6></div>
		<div class="panel-body">
			<input type="hidden" asp-for="Id" />

			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="SubscriptionType" class="col-sm-2 control-label"></label>
				<div class="col-sm-10">
					<input asp-for="SubscriptionType" class="form-control" placeholder="Abonelik türü" type="text" />
				</div>
			</div>

			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Price" class="col-sm-2 control-label"></label>
				<div class="col-sm-10">
					<input asp-for="Price" class="form-control" placeholder="Fiyat(₺)" type="number" />
				</div>
			</div>

			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Duration" class="col-sm-2 control-label"></label>
				<div class="col-sm-10">
					<input asp-for="Duration" class="form-control" placeholder="Süre(Ay)" type="number" />
				</div>
			</div>

			<div class="form-actions text-right">

				<a class="btn btn-dark" asp-action="Index">
					<i class="icon-grid"></i>Back to List
				</a>

				<input type="submit" value="Save" class="btn btn-primary">
			</div>

		</div>
	</div>
</form>