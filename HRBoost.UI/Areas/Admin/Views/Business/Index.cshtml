@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<HRBoost.Entity.Business>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card mb-4">
    <div class="card-header bg-dark text-white">
        <i class="fas fa-table me-1"></i>
        Şirket Listesi
    </div>
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>Ad</th>
                    <th>Adres</th>
                    <th>Telefon</th>
                    <th>Logo</th>
                    <th>Statü</th>
                    <th>Üyelik Bitiş Tarihi</th>
                    <th>İşlemler</th>

                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Ad</th>
                    <th>Adres</th>
                    <th>Telefon</th>
                    <th>Logo</th>
                    <th>Statü</th>
                    <th>Üyelik Bitiş Tarihi</th>
                    <th>İşlemler</th>

                    <th></th>
                </tr>
            </tfoot>
            <tbody>
                @foreach (var b in Model)

                {
                    <tr>
                        <td>@b.BusinessName</td>
                        <td>@b.BusinessAdress</td>
                        <td>@b.BusinessPhone</td>
                        <td>@b.BusinessLogo</td>
                        <td>@b.Status</td>
                        <td>@b.SubscriptionFinishTime.ToShortDateString()</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@b.Id" class="btn btn-warning">Düzenle</a>
                            <a asp-action="Delete" asp-route-id="@b.Id" class="btn btn-danger">Sil</a>
                            @if (b.Status == HRBoost.Shared.Enums.Status.Active)
                            {
                                <a asp-action="Freeze" asp-route-id="@b.Id" class="btn btn-danger">Dondur</a>

                            }
                            else
                            {
                                <a asp-action="Unfreeze" asp-route-id="@b.Id" class="btn btn-danger">Aktifleştir</a>

                            }

                        </td>
                    </tr>
                }


            </tbody>

        </table>
        <a asp-action="Index" asp-controller="Admin" asp-area="Admin" class="btn btn-secondary">Geri</a>
    </div>
</div>


