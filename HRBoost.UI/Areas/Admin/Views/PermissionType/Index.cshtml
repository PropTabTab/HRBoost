@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "İzin Türleri Yönetimi";

    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model List<HRBoost.Entity.PermissionType>


<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        İzin Türleri
    </div>
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>Adı</th>
                    <th>Açıklaması</th>
                    <th>Durumu</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Adı</th>
                    <th>Açıklaması</th>
                    <th>Durumu</th>
                    <th>İşlem</th>
                </tr>
            </tfoot>
            <tbody>
                @foreach (var permission in Model)
                {
                    <tr>
                        <td>@permission.Name</td>
                        <td>@permission.Description</td>
                        <td>@permission.Status</td>
                        <th>
                            <a asp-action="Delete" asp-controller="PermissionType" asp-area="Admin" asp-route-id="@permission.Id" class="btn btn-danger">Sil</a>
                            <a asp-action="Update" asp-controller="PermissionType" asp-area="Admin" asp-route-id="@permission.Id" class="btn btn-warning">Güncelle</a>
                        </th>

                    </tr>
                }


            </tbody>
        </table>
        <a asp-action="Create" asp-controller="PermissionType" asp-area="Admin" class="btn btn-primary">Yeni İzin Türü Ekle</a>
        <a asp-action="Index" asp-controller="Admin" asp-area="Admin" class="btn btn-secondary">Geri</a>
    </div>
</div>