@model HRBoost.Entity.Role
@{
	ViewData["Title"] = "Update";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card" style="border-color: #ddd;">
                <div class="card-header" style="background-color: #555; color: #fff;">
                    <h5 class="card-title">Rol Düzenle</h5>
                </div>

                <div class="card-body">
                    <form method=post asp-action="Update" asp-area="Admin" asp-controller="Role" role="form">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-2">
                            <label asp-for="Name" class="col-sm-2 control-label">Rol Adı</label>
                            <div class="col-sm-10">
                                <input asp-for="Name" class="form-control" placeholder="Rol Adı" type="text" />
                            </div>
                        </div>

                        <div class="text-center mt-3">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                            <a asp-action="Index" asp-area="Admin" asp-controller="Role" class="btn btn-secondary">Geri</a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>