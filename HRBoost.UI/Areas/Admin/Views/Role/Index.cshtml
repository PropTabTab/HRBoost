@model IEnumerable<HRBoost.Entity.Role>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@{
	int sayac = 0;
}

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Roller Listesi
    </div>
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Rol Adı</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>#</th>
                    <th>Rol Adı</th>
                    <th>İşlem</th>
                </tr>
            </tfoot>
            <tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>@(++sayac)</td>
						<td>@item.Name</td>
						<td>
							<a asp-action="Delete" asp-controller="Role" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
							<a asp-action="Update" asp-controller="Role" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-warning">Güncelle</a>

						</td>
					</tr>
				}

            </tbody>
        </table>
		<a asp-action="Add" asp-controller="Role" asp-area="Admin" class="btn btn-primary">Rol Ekle</a>
		<a asp-action="Index" asp-controller="Admin" asp-area="Admin" class="btn btn-secondary">Geri</a>
    </div>
</div>


