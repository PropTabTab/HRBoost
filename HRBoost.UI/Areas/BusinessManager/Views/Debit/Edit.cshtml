@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@model HRBoost.Entity.Debit

<h2>Personel Zimmetlerini Düzenle</h2>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card" style="border-color: #ddd;">
                <div class="card-header" style="background-color: #555; color: #fff;">
                    <h5 class="card-title">Zimmetleri Düzenle</h5>
                </div>

                <div class="card-body">
                    <form asp-action="Edit" method="post">

                        <div class="form-group mb-2">
                            <label for="Name">Ad</label>
                            <input asp-for="Name" class="form-control" placeholder="Zimmet Adı Girin" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>


                        <div class="form-group mb-2">
                            <label for="Amount">Adet</label>
                            <input asp-for="Amount" class="form-control" placeholder="Adet Girin" />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>


                        <div class="form-group mb-2">
                            <label for="Description">Açıklama</label>
                            <input asp-for="Description" class="form-control" placeholder="Açıklama Girin" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>


                        <input asp-for="Id" type="hidden" />
                        <input asp-for="UserId" type="hidden" />
                        <input asp-for="BusinessId" type="hidden" />



                        <div class="text-center mt-3">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                            <a asp-action="Index" class="btn btn-secondary">Geri</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>