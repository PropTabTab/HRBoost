@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

}
@model HRBoost.UI.Areas.BusinessManager.Models.VM.DebitListVM


<<h2>Zimmet Listesi</h2>

<a asp-action="Create" asp-route-id="@Model.UserId" class="btn btn-primary">Yeni Zimmet Ekle</a>

<table class="table">
    <thead>
        <tr>
            <th>Zimmet Tarihi</th>
            <th>Değiştirme Tarihi</th>
            <th>Zimmet Adı</th>
            <th>Açıklama</th>
            <th>Miktar</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var debit in Model.Debits)
        {
            <tr>
                <td>@debit.CreateDate.ToShortDateString()</td>
                <td>@debit.ModifiedDate.ToShortDateString()</td>
                <td>@debit.Name</td>
                <td>@debit.Description</td>
                <td>@debit.Amount</td>

                <td>
                    <a asp-action="Edit" asp-route-id="@debit.Id" class="btn btn-warning">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@debit.Id" class="btn btn-danger">Sil</a>

                </td>
            </tr>
        }

    </tbody>
</table>
