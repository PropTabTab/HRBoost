@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

}
@model HRBoost.UI.Areas.BusinessManager.Models.VM.DebitListVM

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Zimmet Listesi
    </div>
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>Zimmet Adı</th>
                    <th>Açıklama</th>
                    <th>Miktar</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var debit in Model.Debits)
                {
                    <tr>
                        <td>@debit.Name</td>
                        <td>@debit.Description</td>
                        <td>@debit.Amount</td>

                        <td>
                            <a asp-action="Edit" asp-route-id="@debit.Id" class="btn btn-warning">Düzenle</a>
                            <a asp-action="Delete" asp-route-id="@debit.Id" class="btn btn-danger">Sil</a>

                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
<a asp-action="Create" asp-route-id="@Model.UserId" class="btn btn-primary">Yeni Zimmet Ekle</a>
<a asp-controller="Personel" asp-area="BusinessManager" asp-action="Index" class="btn btn-secondary">Geri</a>


