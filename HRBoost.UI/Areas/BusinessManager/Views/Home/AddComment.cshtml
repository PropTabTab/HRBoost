@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model HRBoost.Entity.Business

@{
    ViewData["Title"] = "AddComment";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card" style="border-color: #ddd;">
                <div class="card-header" style="background-color: #555; color: #fff;">
                    <h5 class="card-title">Yorum Ekle</h5>
                </div>

                <div class="card-body">
                    <form asp-action="AddComment" method="post">

                        <div class="form-group">
                            <textarea id="text" asp-for="BusinessComment" class="form-control" rows="6" placeholder="Yorumunuzu Yazınız" required=""></textarea>
                            <span asp-validation-for="BusinessComment" class="text-danger"></span>
                        </div>

                        <div class="text-center mt-3">
                            <button type="submit" value="Create" class="btn btn-primary">Kaydet</button>
                            <a asp-action="Index" class="btn btn-secondary">Geri</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>