@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Personel Bilgilerini Düzenle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@model HRBoost.Entity.User

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card" style="border-color: #ddd;">
                <div class="card-header" style="background-color: #555; color: #fff;">
                    <h5 class="card-title">Personel Bilgilerini Düzenle</h5>
                </div>

                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group mb-2">
                            <label for="FirstName">Ad</label>
                            <input asp-for="FirstName" class="form-control" placeholder="Ad girin" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>


                        <div class="form-group mb-2">
                            <label for="LastName">Soyad</label>
                            <input asp-for="LastName" class="form-control" placeholder="Soyad girin" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>


                        <div class="form-group mb-2">
                            <label for="Email">Email</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="Email adresi girin" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>


                        <div class="text-center mt-3">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                            <a asp-action="Index" class="btn btn-secondary">Geri</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>