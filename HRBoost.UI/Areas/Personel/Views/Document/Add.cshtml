@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model HRBoost.Entity.Document

@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card" style="border-color: #ddd;">
                <div class="card-header" style="background-color: #555; color: #fff;">
                    <h5 class="card-title">Özlük Ekle</h5>
                </div>

                <div class="card-body">
                    <form asp-action="Add" method="post" enctype="multipart/form-data">

                        <div class="form-group mb-2">
                            <label asp-for="FileName" class="control-label">Dosya Adı</label>
                            <input asp-for="FileName" class="form-control" />
                            <span asp-validation-for="FileName" class="text-danger"></span>
                        </div>


                        <div class="form-group mb-2">
                            <label for="file">Dosya Yükleyin:</label>
                            <input asp-for=File type="file" name="file" id="file" />
                        </div>


                        <div class="form-group mb-2">
                            <label asp-for="UploadDate" class="control-label">Tarih</label>
                            <input asp-for="UploadDate" class="form-control" />
                            <span asp-validation-for="UploadDate" class="text-danger"></span>
                        </div>


                        <div class="text-center mt-3">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                            <a asp-action="Index" class="btn btn-secondary">Geri</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>