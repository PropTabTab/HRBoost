@model HRBoost.Entity.Expense

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card" style="border-color: #ddd;">
                <div class="card-header" style="background-color: #555; color: #fff;">
                    <h5 class="card-title">Harcama Güncelle</h5>
                </div>

                <div class="card-body">
                    <form method=post asp-action="Update" asp-area="Personel" asp-controller="Expenses" role="form">
                        <input asp-for="Id" type="hidden" />

                        <div class="form-group mb-2">
							<label asp-for="Name" class="col-sm-2 control-label"></label>
							<div class="col-sm-10">
								<input asp-for="Name" class="form-control" placeholder="Expense Name" type="text" />
							</div>
                        </div>


                        <div class="form-group mb-2">
							<label asp-for="Quantity" class="col-sm-2 control-label"></label>
							<div class="col-sm-10">
								<input asp-for="Quantity" class="form-control" placeholder="Expense Quantity" type="text" />
							</div>
                        </div>


                        <div class="form-group mb-2">
							<label asp-for="Description" class="col-sm-2 control-label"></label>
							<div class="col-sm-10">
								<input asp-for="Description" class="form-control" placeholder="Expense Description" type="text" />
							</div>
                        </div>

                        <div class="text-center mt-3">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                            <a asp-action="Index" class="btn btn-secondary">Geri</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>