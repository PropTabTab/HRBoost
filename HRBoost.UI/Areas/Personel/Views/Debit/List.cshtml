@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model IEnumerable<HRBoost.Entity.Debit>

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Üzerime Kayıtlı Zimmetler
    </div>
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Amount</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Name</th>
                    <th>Amount</th>
                    <th>Description</th>
                </tr>
            </tfoot>
            <tbody>
                @foreach (var debit in Model)

                {
                    <tr>
                        <td>@debit.Name</td>
                        <td>@debit.Amount</td>
                        <td>@debit.Description</td>
                    </tr>
                }

            </tbody>
        </table>
        <a asp-controller="Home" asp-action="Index" asp-area="Personel" class="btn btn-secondary">Geri</a>
    </div>
</div>
