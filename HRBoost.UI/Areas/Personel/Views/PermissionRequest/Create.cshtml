@model HRBoost.Entity.PermissionRequest

@{
    ViewData["Title"] = "Yeni İzin Talebi";

    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm p-4">
        <h2><i class="fa fa-plus-circle"></i> Yeni İzin Talebi</h2>
        <hr />

        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="PermissionType" class="form-label">İzin Türü</label>
                <select asp-for="PermissionType" class="form-control">
                    <option value="">Seçiniz...</option>
                    <option value="Yıllık">Yıllık İzin</option>
                    <option value="Hastalık">Hastalık İzni</option>
                    <option value="Doğum">Doğum İzni</option>
                </select>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Açıklama</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            </div>

            <div class="mb-3">
                <label asp-for="StartDate" class="form-label">Başlangıç Tarihi</label>
                <input asp-for="StartDate" type="date" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="EndDate" class="form-label">Bitiş Tarihi</label>
                <input asp-for="EndDate" type="date" class="form-control" />
            </div>

            <button type="submit" class="btn btn-success">
                <i class="fa fa-check"></i> Kaydet
            </button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">
                <i class="fa fa-arrow-left"></i> Geri Dön
            </a>
        </form>
    </div>
</div>