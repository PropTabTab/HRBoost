@model List<HRBoost.Entity.PermissionRequest>

@{
    ViewData["Title"] = "İzin Talepleri";

    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm p-4">
        <h2 class="mb-4">
            <i class="fa fa-file-alt"></i> İzin Talepleri
        </h2>

        @if (Model == null || !Model.Any())

        {
            <div class="alert alert-info text-center">
                <i class="fa fa-exclamation-circle"></i> Henüz izin talebi bulunmamaktadır.
            </div>
        }

        else

        {
            <table class="table table-striped table-hover text-center">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>İzin Türü</th>
                        <th>Açıklama</th>
                        <th>Başlangıç Tarihi</th>
                        <th>Bitiş Tarihi</th>
                        <th>Durum</th>
                        <th>İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int counter = 1;
                    }
                    @foreach (var request in Model)
                    {
                        <tr>
                            <td>@counter</td>
                            <td>@request.PermissionType</td>
                            <td>@request.Description</td>
                            <td>@request.StartDate.ToString("dd.MM.yyyy")</td>
                            <td>@request.EndDate.ToString("dd.MM.yyyy")</td>
                            <td>
                                @if (request.Status == "Active")

                                {
                                    <span class="badge bg-success">Onaylandı</span>
                                }

                                else if (request.Status == "Pending")

                                {
                                    <span class="badge bg-warning text-dark">Beklemede</span>
                                }

                                else if (request.Status == "Deactive")

                                {
                                    <span class="badge bg-secondary">Pasif</span>
                                }

                                else if (request.Status == "Deleted")

                                {
                                    <span class="badge bg-danger">Silindi</span>
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("Details", new { id = request.Id })" class="btn btn-info btn-sm">
                                    <i class="fa fa-eye"></i> Detaylar
                                </a>
                                <a href="@Url.Action("Edit", new { id = request.Id })" class="btn btn-primary btn-sm">
                                    <i class="fa fa-edit"></i> Düzenle
                                </a>
                                <a href="@Url.Action("Delete", new { id = request.Id })" class="btn btn-danger btn-sm">
                                    <i class="fa fa-trash"></i> Sil
                                </a>
                            </td>
                        </tr>
                        counter++;
                    }
                </tbody>
            </table>
        }

        <div class="text-end">
            <a href="@Url.Action("Create")" class="btn btn-success">
                <i class="fa fa-plus"></i> Yeni İzin Talebi Oluştur
            </a>
        </div>
    </div>
</div>


<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">